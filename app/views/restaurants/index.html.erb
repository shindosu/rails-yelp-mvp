<div class="container">
  <h1 class="header text-center">Restaurants</h1>
  <%= link_to 'Add', new_restaurant_path, class: "text-center" %>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-lg-3 col-md-6 col-sm-8 col-xs-12 cards ">
        <%= link_to restaurant_path(restaurant) do %>
          <%= image_tag 'https://picsum.photos/seed/picsum/200/300', class: "images" %>
          <h3 class="restaurant-name"> <%= restaurant.name %> </h3>
        <% end %>
        <p class="restaurant-category"> <%= restaurant.category %> </p>
      </div>
    <% end %>
  </div>


</div>
